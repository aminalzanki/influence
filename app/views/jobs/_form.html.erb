<div class="job ">
  <div class="jobs-new text-center">
  </div>


  <div class="jobs-form">
  <%= form_for(job) do |f| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
        <% job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>


    <div class="form-group">
     <p> Post Your Background Image Here </p>
    <div id="preview-image">
      <% if @job.background_image? %>
        <%= image_tag @job.background_image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
    </div>

    <div class="form-group">
    <%= f.file_field :background_image, id: "job_background_image_field", class: 'form-control image-uploader' %>
    </div>
    <div id='preview-image'>
    </div>

    <div class="form-group">
      <%= f.label :budget %>
      <div class="input-container">
        <div class="input-group">
         <span class="input-group-addon">$</span>
          <%= f.text_field :budget, class: 'form-control' %>
          <span class="input-group-addon">.00</span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :industry %>
      <%= f.select :industry, ['Travel', 'Food', 'Fashion', 'Cosmetics'], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :requirements %>
      <%= f.text_area :requirements, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, "Tags (Separate by commas)" %>
      <%= f.text_field :tag_list, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :skills %>
      <%= f.text_area :skills, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>

  </div>
</div>
